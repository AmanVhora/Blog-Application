<div class="container w-50">
  <%= form_with(model: @comment_type, url: post_comments_path(params[:post_id]), method: :post) do |form| %>
    <div class="form-group">
      <%= form.text_area :content, class: 'form-control', placeholder: 'Write a comment...' %>
    </div>
    <%= form.hidden_field :commentable_type, value: @comment_type.class.name %>
    <%= form.hidden_field :commentable_id, value: @comment_type.id %>
    <%= form.submit 'Add Comment', class: 'btn btn-primary rounded-1 mt-3' %>
  <% end %>
</div>
