<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://kit.fontawesome.com/421bc9e4ef.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg", style="background-color: rgba(0, 0, 0, 0.075);">
        <div class="container-fluid justify-content-between mx-5">
          <%= link_to "Blogs", blogs_path, class: "navbar-brand" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger me-4" %>
          </div>
        </div>
      </nav>
    <% end %>

    <div class="container mt-5">
      <% flash.each do |type, msg| %>
        <div class="container d-flex justify-content-center align-items-center w-50 alert <%= flash.alert ? "alert-danger" : "alert-success"%>  my-5">
          <%= msg %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
